<form class="user-form" action="/">
    <% if (isRegister) { %>
    <div class="form-field">
        <label for="name">Name</label>
        <input id="name" type="text">
    </div>
    <% } %>
    <div class="form-field">
        <label for="email">E-Mail Address</label>
        <input id="email" type="email">
    </div>
    <div class="form-field">
        <label for="pasword">Password</label>
        <input id="pasword" type="password">
    </div>
    <% if (isRegister) { %>
    <div class="form-field">
        <label for="confirm-password">Confirm Password</label>
        <input id="confirm-password" type="password">
    </div>
    <% } %>
    <div class="form-field-left">
        <div class="remember-me-field">
            <input id="remember-me" type="checkbox">&nbsp;remember me
        </div>
    </div>
    <div class="form-field button-center">
        <button class="button button-primary" type="submit"><%- btnText %></button>
    </div>
</form>
